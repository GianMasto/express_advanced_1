extends layout

block partial 
  div(class="container")
    div(class="col-lg-8 mx-auto")
      h2(class="my-5")!="Vista de Productos"
      if error
        div(class="alert alert-warning")!=error 
      if data
        table(class="table")
          thead(class="table-dark")
            tr
              th(scope="col")!='Nombre'
              th(scope="col")!='Precio'
              th(scope="col")!='Foto'
          tbody
            each item in data
              tr
                td= item.title
                td= item.price
                td
                  img(src!=item.thumbnail style="width:50px;height:50px;object-fit:contain;object-position:center;")


